extends ../../../views/wrapper

block content
	.reg-form-container.centered
		h2 <i class="material-icons">person_add</i>  User Registration 
	
		form.form.form-validation(action="/api/users/register" method="PUT" data-sargasso-class="MolaMola" data-helpers="BoilerplateHandler" data-submitter="#submitter" data-recaptcha= publicOptions.RECAPTCHA_PUBLIC)
			input(type="hidden" name="_csrf" value= csrfToken data-payload)
				
			.reg-form.clear-fix.mdc-elevation--z1
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="email-label" autocomplete="username" name="email" data-validate= {notEmpty:true,isEmail:true} data-lookup-endpoint= "/api/users/is-unique-email" data-unique data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#email-label.mdc-floating-label Email Address
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
				
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="email-label1" autocomplete="username" name="confirm-email" data-validate= validators.email data-match="input[name='email']")
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#email-label1.mdc-floating-label Confirm Email Address
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
				
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="password-label" autocomplete="new-password" type="password" name="password" data-validate= {isPassword:true} data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label.mdc-floating-label Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
				
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="password-label1" autocomplete="new-password" type="password" name="confirm-password" data-validate= {isPassword:true} data-match="input[name='password']")
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label1.mdc-floating-label Confirm Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help

				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="username-label" name="username" data-validate= validators.username data-unique-endpoint= "/api/users/is-unique-username" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						label#username-label.mdc-floating-label Username - set your unique name
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
		
				section.input-group.pull-right
					a.mdc-button(href="/") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled) Sign Up
					
				.ajax-errors
			
			.reg-form-footer.clear-fix.button-bar
				.pull-right.mdc-typography--button 
					a(href="/users/login") Already have an account

			p.mdc-typography--caption After you click "Sign Up" we will send a new validation message to your new email address. Follow the link in the email to complete this process.
			
			p.mdc-typography--caption
				| Note: Once registered, you can delete your account at any time to remove all your personal information from our files. Your password will be encrypted and we will not sell or share your email address. 
				a(href="/policies") MORE
