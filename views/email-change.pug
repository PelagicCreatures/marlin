extends ../../../../views/wrapper

block content
	.reg-form-container.centered
		h2
			i.material-icons mail_outline
			|  Change Email Address
		
		form.form.form-validation(action="/api/users/email-change" method="PATCH" data-sargasso-class="MolaMola" data-helpers="BoilerplateHandler" data-submitter="#submitter")
			input(type="hidden" name="_csrf" value= csrfToken data-payload)
			.reg-form.clear-fix.mdc-elevation--z1
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="email-label" name="email" data-validate= validators.email data-unique-endpoint="/api/users/is-unique-email" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#email-label.mdc-floating-label New Email Address
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help

				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="email-label1" name="confirm-email" data-validate= validators.email data-match="input[name='email']")
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#email-label1.mdc-floating-label Confirm New Email Address
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help

				section.input-group.pull-right.button-bar
					a.mdc-button(href="/users/settings") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled) Save
			
				.ajax-errors
					
			p.mdc-typography--caption After you click "save" we will send a message to your new email address. Follow the link in the email to complete this process.
