extends ../../../../views/wrapper

block content
	.reg-form-container.centered
		h2 <i class="material-icons">person</i>  User Login 
		
		form.form.form-validation(action="/api/users/login" method="PUT" data-sargasso-class="MolaMola" data-submitter="#submitter" data-helpers="BoilerplateHandler")
			input(type="hidden" name="_csrf" value= csrfToken  data-payload)

			.reg-form.clear-fix.mdc-elevation--z1
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input#email.mdc-text-field__input(aria-labelledby="email-label" autocomplete="username" name="email" data-validate= {notEmpty:true,isEmail:true} value="" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#email-label.mdc-floating-label Email Address
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
						
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input#password.mdc-text-field__input(aria-labelledby="password-label" autocomplete="current-password" type="password" name="password" data-validate= {notEmpty:true,isPassword:true}  value="" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label.mdc-floating-label(for="password") Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help

				section.input-group.pull-right.button-bar
					a.mdc-button(href="/") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled).primary-button
						span.mdc-button__label Login
					
				.ajax-errors
			
			.reg-form-footer.mdc-typography--button.clear-fix
				.pull-left
					a(href="/users/password-reset") Forgot Password
				.pull-right
					a(href="/users/register") Don't have an account
