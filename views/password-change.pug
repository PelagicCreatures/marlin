extends ../../../views/wrapper

block content
	.reg-form-container.centered
		h2
			i.material-icons lock
			|  Change Password
				
		form.form.form-validation(action="/api/users/password-change" method="PATCH" data-sargasso-class="MolaMola" data-helpers="BoilerplateHandler" data-submitter="#submitter")
			input(type="hidden" name="_csrf" value= csrfToken data-payload)

			.reg-form.clear-fix.mdc-elevation--z1
				
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="password-label" autocomplete="current-password" type="password" name="oldpassword" data-validate= {isPassword:true} data-min-length="8" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label.mdc-floating-label Old Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
								
				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="password-label1" autocomplete="new-password" type="password" name="password" data-validate= {isPassword:true} data-min-length="8" data-payload)
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label1.mdc-floating-label New Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help

				section.input-group
					label.mdc-text-field.mdc-text-field--filled.mdc-text-field--with-trailing-icon
						span.mdc-text-field__ripple
						input.mdc-text-field__input(aria-labelledby="password-label2" autocomplete="new-password" type="password" name="confirm-password" data-validate= {isPassword:true} data-match="input[name='password']" placeholder="confirm password")
						i.input-ok-indicator.material-icons.mdc-text-field__icon.mdc-text-field__icon--trailing check_circle
						span#password-label2.mdc-floating-label Confirm New Password
						.mdc-line-ripple
					.mdc-text-field-helper-line
						.mdc-text-field-helper-text.mdc-text-field-helper-text--persistent.mdc-text-field-helper-text--validation-msg
							.validation-help
								
				section.input-group.pull-right.button-bar
					a.mdc-button(href="/users/settings") Cancel
					button#submitter.mdc-button.mdc-button--raised(disabled) Save New Password
					
				.ajax-errors
